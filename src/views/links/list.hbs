{{tbl}}
{{>navegation}}

<div class="card tex-center ml-auto">
  <div class="card-body tex-center">
    <h1 style="color:#ff0000" ;>
      WELCOME
      </h3>
      <h4 style="color:#210699">{{user.fullname}}</h4>


  </div>
</div>

<div class="container p-4">
  <div class="row">

    {{#each links}}
    <div class="col-md-3 ">
      <div class="card tex-center">
        <div class="card-body">
          {{!- redirecciona a la url y abre nueva ventana}}
          <a href="{{url}}" target="_blank">
            <h3 class="card-title text-uppercase">
              {{title}}
            </h3>
          </a>
          <p class "m-2">{{description}}</p>
          <p>{{timeago created_at}} </p>
          {{!- etiquetas como botones}}
          {{!eliminar id de DB con la etiqueta}}
          <a href="/links/delete/{{id}}" class="btn btn-danger">Delete Link</a>
          {{!editar id de DB con la etiqueta}}
          <a href="/links/edit/{{id}}" class="btn btn-secondary">Edit</a>
        </div>

      </div>
    </div>
    {{else}}
    <div class="col-md-4 mx-auto">
      <div class="card card-body text-center">
        <p>There are not links saved yet</p>
        <a href="/links/add">Create One!</a>
      </div>
    </div>
    {{/each}}
  </div>
</div>
